{
  "name": "@filcdev/filc",
  "private": true,
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": "bun biome check --write"
  },
  "scripts": {
    "dev": "turbo run dev",
    "lint": "biome check --write .",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "prepare": "bun run .husky/install.ts || true"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.7.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.5",
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "catalog": {
      "@types/bun": "^1.3.4",
      "typescript": "^5.9.3",
      "hono": "^4.10.7",
      "better-auth": "^1.4.4",
      "zod": "^4.3.5"
    }
  }
}
